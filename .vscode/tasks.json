{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fetch Data",
            "type": "shell",
            "command": "node",
            "args": [
                "scripts/fetchData.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Analyze Profile Structure",
            "type": "shell",
            "command": "python",
            "args": [
                "src/utils/dom_analyzer.py",
                "--url",
                "${input:profileUrl}",
                "--output",
                "data/dom_analysis.json"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Test Selectors",
            "type": "shell",
            "command": "python",
            "args": [
                "src/utils/test_selectors.py",
                "--config",
                "config/selectors.json"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ],
    "inputs": [
        {
            "id": "profileUrl",
            "description": "Enter Facebook profile URL to analyze:",
            "default": "https://www.facebook.com/public/",
            "type": "promptString"
        }
    ]
}